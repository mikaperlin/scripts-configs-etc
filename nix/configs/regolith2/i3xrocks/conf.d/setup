# i3xrocks config file
# # The man page for i3blocks is hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties applied to every block
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/share/i3xrocks/scripts/$BLOCK_NAME
separator_block_width=35
markup=pango
color=xresource:i3xrocks.value.color
label_color=xresource:i3xrocks.label.color

[net-traffic]
interval=repeat

[cpu-usage]
interval=1
min_width=100%

[battery]
interval=10

[rofication]
interval=1

[time]
interval=xresource:i3xrocks.time.interval 1
