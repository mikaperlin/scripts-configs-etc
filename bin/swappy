#!/usr/bin/bash

python=/usr/bin/python

if ! [ $(id -u) = 0 ]; then
  echo "please run with sudo"
  exit 0
fi 

if ! [ $1 ]; then
  if [ `readlink $python` == "python2" ]; then
    new=3
  else
    new=2
  fi
elif [ $1 = 2 ] || [ $1 = 3 ]; then
  new=$1
else
  echo "run with options 2 or 3" 
fi
if [ `readlink /usr/bin/python` != "python$new" ]; then
  echo "symlinking python to python$new"
  sudo ln -sf python$new $python
  sudo ln -sf python$new-config $python-config
else
  echo "python already symlinked to python$new"
fi
