#!/bin/zsh

mount_point=/run/media/perlinm/PERLINM
mount_point=/media/mnt

if [ -e $mount_point/.perlinm ]; then
  rsync -Lurv ~/Workspace $mount_point \
    --exclude="*/lpf/workspace/*.mat" \
    --exclude="*/lpf/workspace/*/*.mat" \
    --exclude="*/lpf/workspace/*/*/*.mat" \
    --exclude="*/lpf/workspace/*/*/*/*.mat"
else
  echo "Backup drive not mounted"
fi
