#!/bin/zsh

if [ $1 = inc ]; then
  pamixer --increase 5
elif [ $1 = dec ]; then
  pamixer --decrease 5
elif [ $1 = max ]; then
  pamixer --set-volume 100
elif [ $1 = min ]; then
  pamixer --set-volume 0
elif [ $1 = med ]; then
  pamixer --set-volume 50
elif [ $1 = on ]; then
  pamixer --unmute
elif [ $1 = off ]; then
  pamixer --mute
  volnoti-show -m
elif [ $1 = toggle ]; then
  if [ `pamixer --get-mute` = true ]; then
    $0 on
  else
    $0 off
  fi
fi

if [ `pamixer --get-mute` = false ]; then
  volnoti-show `pamixer --get-volume`
fi
