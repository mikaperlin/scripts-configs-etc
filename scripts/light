#!/bin/sh

med=60

if [ $1 = dec ]; then
  xbacklight -dec 10
elif [ $1 = inc ]; then
  xbacklight -inc 10
elif [ $1 = dim ]; then
  xbacklight -set 20
elif [ $1 = max ]; then
  xbacklight -set 100
elif [ $1 = set ]; then
  xbacklight -set $2
elif [ $1 = med ]; then
  xbacklight -set $med
elif [ $1 = toggle ]; then
  current=$(printf "%.0f" $(xbacklight))
  if [ $current -ge $med ]; then
    $0 dim
  else
    $0 max
  fi
fi
