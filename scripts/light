#!/bin/sh

echo $0

if [ $1 = dec ]; then
  xbacklight -dec 20
elif [ $1 = inc ]; then
  xbacklight -inc 20
elif [ $1 = dim ]; then
  xbacklight -set 20
elif [ $1 = max ]; then
  xbacklight -set 100
elif [ $1 = set ]; then
  xbacklight -set $2
elif [ $1 = med ]; then
  xbacklight -set 60
elif [ $1 = toggle ]; then
  if [ $2 ]; then
    med=$2
  else
    med=60
  fi
  current=$(printf "%.0f" $(xbacklight -get))
  if [ $current -ge $med ]; then
    $0 dim
  else
    $0 max
  fi
fi
